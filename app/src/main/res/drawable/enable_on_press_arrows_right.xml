<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle">
            <size
                android:width="40dp"
                android:height="40dp" />
            <solid android:color="@color/gray_cc" />
            <corners android:radius="0dp"/>
        </shape>
    </item>

    <item
        android:top="19.5dp"
        android:bottom="19.5dp"
        android:right="-40dp"
        android:left="0dp">
        <rotate
            android:fromDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="@color/black" />
            </shape>

        </rotate>
    </item>

    <item
        android:top="19.5dp"
        android:bottom="19.5dp"
        android:right="-40dp"
        android:left="0dp">
        <rotate
            android:fromDegrees="-45">
            <shape android:shape="rectangle">
                <solid android:color="@color/black" />
            </shape>

        </rotate>
    </item>

    <item
        android:top="30dp">
        <rotate
            android:fromDegrees="0">
            <shape android:shape="rectangle">
                <solid android:color="@color/gray_cc" />
            </shape>

        </rotate>
    </item>

    <item
        android:bottom="30dp">
        <rotate
            android:fromDegrees="0">
            <shape android:shape="rectangle">
                <solid android:color="@color/gray_cc" />
            </shape>

        </rotate>
    </item>

</layer-list>